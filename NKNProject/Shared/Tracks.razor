@page "/tracks"
@inherits TracksModel

<MatButton>Add Track</MatButton>

<MatTable Items="@trackList" class="mat-elevation-z5" AllowSelection="true" FilterByColumnName="TrackName">
    <MatTableHeader>
        <th>Name</th>
        <th>Genre</th>
        <th>Release Date</th>
        <th>Track Description</th>
    </MatTableHeader>
    <MatTableRow>
        <td>@context.TrackName</td>
        <td>@context.TrackGenre</td>
        <td>@context.TrackReleaseDate</td>
        <td>@context.TrackDescription</td>
        <td>
            <MatButton Raised="true" Icon="edit" title="Edit Track"></MatButton>
            <MatButton Raised="true" Icon="restore_from_trash" title="Edit Track"></MatButton>
        </td>
    </MatTableRow>
</MatTable>

@if (trackList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Genre</th>
                <th>Release Date</th>
                <th>Track Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tracks in trackList)
            {
                <tr>
                    <td>@tracks.TrackName</td>
                    <td>@tracks.TrackGenre</td>
                    <td>@tracks.TrackReleaseDate</td>
                    <td>@tracks.TrackDescription</td>
                    <td>
                        <button type="submit" class="btn btn-info" @onclick="@(async () => await EditTrack(track.Id))">Edit</button>
                        <button class="btn btn-danger" @onclick="@(async () => await DeleteConfirm(track.Id))">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

